                  "if (environment.ENABLE_WS_ASSERTIONS===true) {",
                  "expect(environment.callback.headers['content-type']).to.equal('application/vnd.interoperability.quotes+json;version={$inputs.expectedQuotesVersion}')",
                  "}"
                ]
